<script type="text/html" id="li-dropdown-outer">
    <div>
        <span class="caret" data-bind="css: {disabled: disabled}">â–¼</span>
        <input type="text" class="select-dropdown" ref="inputEl" readonly="true"
            data-bind="attr: {data-activates: 'select-options-' + id, disabled: disabled() ? 'disabled' : null},
                css: {disabled: disabled}, value: getTextForValue(getValue())">
        <ul class="dropdown-content select-dropdown" ref="ulEl" style="width: 170px; display: none;"
            data-bind="foreach: options, attr: {id: 'select-options-' + id}">
            <li data-bind="attr: {data-value: $data.value, class: $data.cls},
                css: {active: $data.value === $root.getValue(), disabled: $data.disabled}"><span data-bind="text: $data.text"></span></li>
        </ul>
    </div>
</script>
